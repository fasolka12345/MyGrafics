<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="0dp">

        <com.example.mygrafics.RootYourself
            android:id="@+id/rootYourselfView"
            android:layout_width="wrap_content"
            android:layout_height="766dp" />

        <TextView
            android:id="@+id/textCompareRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:onClick="clickCompareRoot"
            android:text="Compare graphes"
            android:textColor="#959494"
            android:textSize="34sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>